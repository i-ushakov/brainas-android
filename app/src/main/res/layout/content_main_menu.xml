<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:layout_gravity="bottom"
    android:background="@color/colorPrimary"
    android:id="@+id/menu_panel">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="New Button"
        android:id="@+id/add_task_button"
        android:src="@drawable/plus_button"
        android:height="35dp"
        android:background="@color/north_sea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="New Button"
        android:id="@+id/slide_button"
        android:src="@drawable/slide_up_icon"
        android:height="35dp"
        android:layout_below="@+id/add_task_button"
        android:background="@color/skyBlue" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/slide_button"
            android:id="@+id/main_menu_panel"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/first_menu_column"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/todo_menu_icon"
                    android:id="@+id/menu_item_todo"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/people_menu_icon"
                    android:id="@+id/menu_item_people"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/my_accounts_menu_icon"
                    android:id="@+id/menu_item_accounts"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>account_icon
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/second_menu_column"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/task_list_icon"
                    android:id="@+id/menu_item_tasks"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/ba_logo_200_color"
                    android:id="@+id/menu_item_logo"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/settings_menu_icon"
                    android:id="@+id/menu_item_settings"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/third_menu_column"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:src="@drawable/categories_menu_icon"
                    android:id="@+id/menu_item_categories"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"/>

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>

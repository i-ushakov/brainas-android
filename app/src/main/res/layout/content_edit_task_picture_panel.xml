<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_edit_task"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/taskPicturePanel"
    android:layout_weight="4"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/taskPictureCont"
        android:layout_weight="1">
        <net.brainas.android.app.UI.logic.SquareLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chess_background"
            android:layout_gravity="center"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/taskPictureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/picture_icon"
                android:alpha="0.5" />
        </net.brainas.android.app.UI.logic.SquareLinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5dp">
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:padding="8dp"
            android:id="@+id/taskPictureButtonsCont">

            <!-- Search (Btn) -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:id="@+id/searchImageBtn"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:padding="6dp"
                android:layout_margin="2dp"
                android:onClick="searchImageInInternet">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_search_white_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Search"
                    android:id="@+id/searchImageBtnLabel"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Capture (Btn) -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:id="@+id/capturePictureBtn"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:padding="6dp"
                android:layout_margin="2dp"
                android:onClick="capturePicture"
                android:layout_below="@id/searchImageBtn">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_photo_camera_white_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Photo"
                    android:id="@+id/capturePictureBtnLabel"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Gallery (Btn) -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:id="@+id/loadFromGalleryBtn"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:padding="6dp"
                android:layout_margin="2dp"
                android:onClick="loadFromGallery"
                android:layout_below="@id/capturePictureBtn">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_photo_library_white_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gallery"
                    android:id="@+id/loadFromGalleryBtnLabel"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>